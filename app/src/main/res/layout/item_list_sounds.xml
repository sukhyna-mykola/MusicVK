<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/vk_share_gray_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:gravity="center"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/play_pause_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/selector_btn"
            android:src="@drawable/ic_play_arrow_white_24dp"/>


        <ImageButton
            android:id="@+id/download_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn_rect"
            android:src="@drawable/ic_file_download_black_24dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/duration_size_info"
            android:layout_toRightOf="@+id/play_pause_item_button"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/artist_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/duration_size_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/download_item_button"
            android:clickable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/duration_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingLeft="5dp"
                android:paddingRight="16dp"
                />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>