<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
                android:id="@+id/item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/play_pause_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_media_play"/>

    <ImageButton
        android:id="@+id/menu_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_more"/>

    <TextView
        android:id="@+id/title_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/play_pause_item_button"
        android:maxLength="30"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/artist_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/duration_item_text"
        android:layout_toRightOf="@+id/title_item_text"
        android:maxLength="30"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/duration_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/menu_item_button"/>

</RelativeLayout>
   </FrameLayout>